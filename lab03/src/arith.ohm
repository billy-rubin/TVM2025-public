Arithmetic {
  Exp      = AddExp

  AddExp   = MulExp (("+" | "-") MulExp)*
  MulExp   = PriExp (("*" | "/") PriExp)*
  
  PriExp   = "-" PriExp        -- neg
           | "(" Exp ")"       -- paren
           | number            -- num
           | variable          -- var

  number   = digit+
  variable = letter (letter | digit)*

}
